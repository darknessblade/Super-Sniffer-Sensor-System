esphome:
  name: multi-air-quality-sensor
  platform: ESP32
  board: esp32-s3-devkitc-1

wifi:
  ssid: "Your_SSID"
  password: "Your_PASSWORD"

  # Enable fallback hotspot (captive portal) in case wifi connection fails
  ap:
    ssid: "Multi-Air-Quality-Fallback"
    password: "fallback-password"

captive_portal:

# Enable logging
logger:

# Enable Home Assistant API
api:

ota:

sensor:
  #=====
  # MQ-2
  # Gases it can detect: LPG, i-butane, propane, methane, alcohol, hydrogen, smoke
  # Similar detection to: MQ-5 (LPG), MQ-6 (LPG)
  - platform: adc
    pin: GPIO36  # Choose an appropriate ADC pin for ESP32-S3
    name: "MQ-2 Gas Sensor"
    update_interval: 10s
    unit_of_measurement: "V"
    accuracy_decimals: 3
    filters:
      - multiply: 3.3  # Assuming 3.3V reference voltage, adjust if different
  #=====

  #=====
